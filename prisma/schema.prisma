// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  email String @unique()
  hash String
  firstname String
  lastname String

  uploads Upload[]
  summarizedPdfs Summary[]
  summarizedAudo SummarizedAudio[]

  @@map("users")
}

model Upload {
  id Int @id @default(autoincrement())
  uploadedAt DateTime @default(now())
  filesize Int
  key String

  userId Int
  users User @relation(fields: [userId], references: [id])

  @@map("uploads")
}

model Summary {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  fileSize Int
  key String

  userId Int
  users User @relation(fields: [userId], references: [id])

  @@map("summaries")
}

model SummarizedAudio {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  filesize Int
  audioLength String
  key String

  userId Int
  users User @relation(fields: [userId], references: [id])

  @@map("summarizedAudio")
}
